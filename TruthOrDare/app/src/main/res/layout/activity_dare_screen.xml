<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hot.pomp.com.truthordare.DareScreen"
    android:background="@drawable/dare_background"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dareTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_search_url_text_selected"
        android:text="Placeholder Text"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAlignment="center"
        android:layout_marginTop="100dp"/>

    <!-- Bring user to main screen when they press "keep playing", or to exit screen
     if they press "I'm Done-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Done"
        android:id="@+id/Done"
        android:onClick="openExitScreen"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/bright_foreground_material_dark"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:background="#000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Playing"
            android:id="@+id/Play"
            android:onClick="openMainMenu"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/bright_foreground_inverse_material_light"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/Done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</RelativeLayout>