<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/dare_view_background">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select what dares you would like to choose from"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/button_material_light"
        android:textIsSelectable="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:typeface="serif"
        android:layout_weight="0.07" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:textColor="@color/button_material_light" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexy"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textColor="@color/button_material_light" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alcohol"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:textColor="@color/button_material_light" />
</LinearLayout>